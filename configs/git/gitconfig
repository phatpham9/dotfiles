[user]
	name = Phat Pham
	email = phat@onroads.xyz
	signingkey = ~/.ssh/id_ed25519.pub

[core]
	excludesfile = ~/.gitignore_global
	ignorecase = false

[init]
	defaultBranch = main

[gpg]
	format = ssh

[commit]
	gpgsign = true
	verbose = true

[tag]
	gpgsign = true
	sort = version:refname

[branch]
	sort = -committerdate

[push]
	default = simple
	autoSetupRemote = true
	followTags = true

[fetch]
	prune = true
	pruneTags = true
	all = true

[help]
	autocorrect = prompt

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[includeIf "gitdir:~/code/secondary/"]
	path = ~/.gitconfig_secondary
